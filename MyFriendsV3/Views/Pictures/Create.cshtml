@model MyFriendsV3.Models.CombinedModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Picture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Picture Name</label>
                <input asp-for="Picture.PictureName" class="form-control" />
                <span asp-validation-for="Picture.PictureName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture.SetPicture" class="control-label"></label>
                <input asp-for="Picture.SetPicture" class="form-control" type="file"/>
                <span asp-validation-for="Picture.SetPicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Picture.User" class="form-control">
                    @foreach (var item in Model.Users)
                    {
                        <option value="@item.FirstName">@item</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
